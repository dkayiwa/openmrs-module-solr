<?xml version="1.0" encoding="UTF-8"?>

<module configVersion="1.2">

	<!-- Module Properties -->
	<id>solr</id>
	<name>Solr Module</name>
	<version>1.0-SNAPSHOT</version>
	<package>org.openmrs.module.solr</package>
	<author>OpenMRS Developers</author>
	<description>
		A Solr module
	</description>
	<updateURL>https://dev.openmrs.org/modules/download/solr/update.rdf</updateURL>
	<require_version>1.7.0</require_version>
	<!-- / Module Properties -->

	
	<!-- Module Activator -->
	<activator>org.openmrs.module.solr.SolrActivator</activator>
	
	
	<!-- Adds link to admin page -->
	<extension>
		<point>org.openmrs.admin.list</point>
		<class>org.openmrs.module.solr.extension.html.AdminList</class>
	</extension>
	<extension>
		<point>org.openmrs.patientDashboardTab</point>
		<class>org.openmrs.module.solr.extension.html.ChartSearchTabExt</class>
	</extension>
	
	<!-- Filter definitions -->
	
	<filter>
		<filter-name>SolrRequestFilter</filter-name> 
		<filter-class>org.apache.solr.servlet.SolrDispatchFilter</filter-class> 
	</filter>
	<filter-mapping>
		<filter-name>SolrRequestFilter</filter-name> 
		<url-pattern>/dataimport</url-pattern> 
	</filter-mapping>
	
	<!-- Maps hibernate file's, if present -->
	<mappingFiles>
				
		BasicExample.hbm.xml
				
	</mappingFiles>

	<!-- Internationalization -->
	<!-- All message codes should start with solr. -->
	<messages>
		<lang>en</lang>
		<file>messages.properties</file>
	</messages>
	<messages>
		<lang>fr</lang>
		<file>messages_fr.properties</file>
	</messages>
	<messages>
		<lang>es</lang>
		<file>messages_es.properties</file>
	</messages>
	<!-- /Internationalization -->

</module>

